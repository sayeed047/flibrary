<div class="container" style="padding-top:20px;">


  {{#each model as |library|}}
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{library.name}}</h3>
        </div>
        <div class="panel-body">
          <p>Address: {{library.address}}</p>
          <p>Phone: {{library.phone}}</p>
        </div>
        <div class="panel-footer" style="margin-left: 0 !important, margin-right: 0 !important">
          <div class="container-fluid">
            <div class="row" >
              <div class="col-md-6 text-left" >
                <p>Number of books:<span class="badge">{{library.book.length}}</span></p>
              </div>
              <div class="col-md-6 text-right" >
                {{#link-to 'libraries.edit' library.id class='btn btn-success btn-xs' }}View{{/link-to}}
                <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>Delete</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
